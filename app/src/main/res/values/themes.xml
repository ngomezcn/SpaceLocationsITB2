        <item name="colorSecondary">@color/spacex_blue</item>
        <item name="colorSecondaryVariant">@color/spacex_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
