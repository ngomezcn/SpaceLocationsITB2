        <item name="android:itemBackground">@color/spacex_blue</item>

        <item name="colorPrimary">@color/spacex_black</item>
        <item name="colorPrimaryVariant">@color/spacex_black</item>
        <item name="colorOnPrimary">@color/white</item>
